<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_explorer">

    <fragment
        android:id="@+id/navigation_explorer"
        android:name="com.aleisder.ecommerceapp.presentation.store.StoreFragment"
        android:label="@string/title_explorer"
        tools:layout="@layout/fragment_store" />

    <fragment
        android:id="@+id/navigation_basket"
        android:name="com.aleisder.ecommerceapp.presentation.basket.BasketFragment"
        android:label="@string/title_basket"
        tools:layout="@layout/fragment_basket" />

    <fragment
        android:id="@+id/navigation_favourite"
        android:name="com.aleisder.ecommerceapp.presentation.favourites.FavouritesFragment"
        android:label="@string/title_favourite"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.aleisder.ecommerceapp.presentation.account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
</navigation>